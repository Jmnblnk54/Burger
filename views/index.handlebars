<nav class="navbar navbar-light bg-light">
  <span class="navbar-brand mb-0 h1 navbar-text">Burger Devourer!</span>
</nav>

<div class="container">
    <div class="row">
        <div class="col-sm">
            <h2>Burgers to be devoured:</h2>

            <ol class="burgerList">
                {{#each burgers}}
                {{#unless devoured}}

                {{> burgers/burger-block devour=false}}
                <button class="change-devour" data-id="{{id}}" data-newdevour="{{devour}}">Devour it!
                </button>
                <br>
                <br>
                {{/unless}}
                {{/each}}
            </ol>
        </div>

        <div>
          <div class="col-sm" id="addburger">
            <h2>Add a Burger</h2>
            <form class="create-form">
              <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="name">
              </div>
              <button type="submit">Add Burger</button>
            </form>
          </div>
        </div>

        <div class="col-sm">
          <h2>Burgers devoured:</h2>
            <div>
              <ol class="burgerList">
                {{#each burgers}}
                  {{#if devoured}}
                    {{> burgers/burger-block devour=false}}
                  {{/if}}
                {{/each}}
              </ol>
            </div>
        </div>
        
    </div>
</div>